{
    "env": {
        "es6": true,
        "node": true,
        "jest": true
    },
    "extends": ["airbnb-base", "prettier", "plugin:node/recommended"],
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "rules": {
        "no-unused-vars": "warn",
        "no-useless-constructor": "off"
    },
    "parser": "babel-eslint",
    "plugins": ["prettier"]
}
